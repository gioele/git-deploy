#!/bin/bash

USAGE="Usage: `basename $0` [-ah] sshpath [branchname]"

# we want at least one parameter (it may be a flag or an argument)
if [ $# -eq 0 ]; then
	echo $USAGE >&2
	exit 1
fi

AUTOPUSH=0

# parse command line arguments
while getopts ah OPT; do
    case "$OPT" in
	h)	echo $USAGE
		exit 0
		;;
	a)	AUTOPUSH=1
		;;
	\?)	# getopts issues an error message
		echo $USAGE >&2
		exit 1
		;;
    esac
done

shift $(( $OPTIND - 1 ))

# read arguments

REMOTE="$1"
echo $REMOTE

if [[ -n "$2" ]] ; then
    BRANCH=$2
else
    BRANCH="origin"
fi


# deduce paths and repo names

FROMDIR=`pwd`
FROM=`basename "$FROMDIR"`
TO="${FROM/ /\\ }.git"
TODIR="$FROMDIR.git"


# check whether we are in the root dir of a git-managed repository

if [[ ! -d "$FROMDIR/.git" ]] ; then
    echo "ERROR: Directory '$FROMDIR/.git' not found." >&2
    echo "ERROR: '$FROMDIR' does not appear to be a git repository." >&2
    exit 1
fi


# create a remote copy of the repo

git clone --bare "$FROMDIR" "$TODIR"
scp -r "$TODIR" "$REMOTE"

rm -rf "$TODIR"


# save info about the remote repo

git config remote.$BRANCH.url "$REMOTE/$TO"
git config remote.$BRANCH.fetch "+refs/heads/*:refs/remotes/$BRANCH/*"

if [[ "$BRANCH" == "origin" ]] ; then
	git config branch.master.remote $BRANCH
fi

git config branch.master.merge refs/heads/master


# record auto push settings

if [[ $AUTOPUSH == 1 ]] ; then
	echo "Enablishing auto push on commit"
	echo "git push $BRANCH" >> .git/hooks/post-commit
	chmod +x .git/hooks/post-commit
fi

exit;
